<%- include('../partials/header') %>

<% if (user) { %>
<table id="list">
  <thead>
    <tr>
      <th>Name of Creator</th>
      <th>Month</th>
      <th>Year</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% budgets.forEach(function(b) { %>
    <tr>
      <td><%= b.nameOfCreator %></td>
      <td><%= b.month %></td>
      <td><%= b.year %></td>
      <td id="action-list">
        <a href="/budgets/<%= b._id %>"">View Budget</a>
        <a href="/budgets/<%= b._id %>/edit" id="view-button">Edit Budget</a>
        <form action="/budgets/<%= b._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<h2 id="landing-page">Please log in to view budgets.</h2>
<% } %> 

<%- include('../partials/footer') %>
